{
   "containerDefinitions": [ 
      { 
         "name": "relayer-container-STAGE",
         "essential": true,
         "image": "852551629426.dkr.ecr.us-east-2.amazonaws.com/relayer-stage:STAGE",
         "logConfiguration": {
          "logDriver": "awsfirelens",
          "options": {
              "provider": "ecs",
              "dd_service": "relayer-3",
              "dd_tags": "env:STAGE,project:chainbridge",
              "dd_message_key": "log",
              "Host": "http-intake.logs.datadoghq.com",
              "TLS": "on",
              "dd_source": "relayer-container-STAGE",
              "Name": "datadog"
          },
          "secretOptions": [
              {
                  "name": "apikey",
                  "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/common/datadog/key"
              }
          ]
          },
          "command": [
            "run", "--config=env", "--name=R3", "--blockstore=/mount/r3/lvldbdata"
          ],
         "portMappings": [ 
           { 
             "containerPort": 9000,
             "hostPort": 9000,
             "protocol": "tcp"
           },
           { 
             "containerPort": 9001,
             "hostPort": 9001,
             "protocol": "tcp"
           }
         ],
         "mountPoints": [
            {
             "containerPath": "/mount",
             "sourceVolume": "efs"
            }
        ],
         "environment": [
           {
             "value": "relayer-3",
             "name": "DD_SERVICE"
           }
         ],
         "secrets": [ 
            { 
               "name": "CBH_RELAYER_MPCCONFIG_KEY",
               "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/chainbridge/relayers/relayer-3/CBH_RELAYER_MPCCONFIG_KEY"
            },
            { 
                "name": "CBH_RELAYER_MPCCONFIG_THRESHOLD",
                "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/chainbridge/relayers/relayer-3/CBH_RELAYER_MPCCONFIG_THRESHOLD"
            },
            { 
                "name": "CBH_RELAYER_MPCCONFIG_KEYSHAREPATH",
                "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/chainbridge/relayers/relayer-3/CBH_RELAYER_MPCCONFIG_KEYSHAREPATH"
            },
            { 
                "name": "CBH_RELAYER_MPCCONFIG_TOPOLOGYCONFIGURATION_SECKEY",
                "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/chainbridge/relayers/relayer-3/CBH_RELAYER_MPCCONFIG_TOPOLOGYCONFIGURATION_SECKEY"
            },
            { 
                "name": "CBH_RELAYER_MPCCONFIG_TOPOLOGYCONFIGURATION_ACCESSKEY",
                "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/chainbridge/relayers/relayer-3/CBH_RELAYER_MPCCONFIG_TOPOLOGYCONFIGURATION_ACCESSKEY"
            },
            {
                "name": "CBH_RELAYER_MPCCONFIG_TOPOLOGYCONFIGURATION_PATH",
                "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/chainbridge/relayers/relayer-3/CBH_RELAYER_MPCCONFIG_TOPOLOGYCONFIGURATION_PATH"
            },
            { 
                "name": "CBH_DOM_1",
                "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/chainbridge/relayers/relayer-3/CBH_DOM_1"
            },
            { 
                "name": "CBH_DOM_2",
                "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/chainbridge/relayers/relayer-3/CBH_DOM_2"
            }
         ]
      },
      {
       "name": "datadog-agent",
       "image": "gcr.io/datadoghq/agent:latest",
       "essential": true,
       "logConfiguration": {
           "logDriver": "awslogs",
           "options": {
               "awslogs-group": "/ecs/relayer-STAGE-3",
               "awslogs-region": "us-east-2",
               "awslogs-stream-prefix": "ecs"
           }
       },
       "portMappings": [
           {
               "hostPort": 8126,
               "protocol": "tcp",
               "containerPort": 8126
           }
       ],
       "command": [],
       "cpu": 0,
       "environment": [
           {
               "name": "DD_APM_ENABLED",
               "value": "true"
           },
           {
               "name": "DD_APM_NON_LOCAL_TRAFFIC",
               "value": "true"
           },
           {
               "name": "DD_TAGS",
               "value": "env:STAGE,project:relayer-3"
           },
           {
               "name": "ECS_FARGATE",
               "value": "true"
           },
           {
             "name": "ENV",
             "value": "STAGE"
           }
       ],
       "secrets": [
           {
               "name": "DD_API_KEY",
               "valueFrom": "arn:aws:ssm:us-east-2:852551629426:parameter/common/datadog/key"
           }
       ],
       "mountPoints"   : [],
       "volumesFrom"   : []
   },
   {
       "name": "log_router",
       "image": "906394416424.dkr.ecr.us-east-2.amazonaws.com/aws-for-fluent-bit:latest",
       "essential": true,
       "firelensConfiguration": {
           "type": "fluentbit",
           "options": {
               "enable-ecs-log-metadata": "true"
           }
       },
       "logConfiguration": {
           "logDriver": "awslogs",
           "options": {
               "awslogs-group": "/ecs/relayer-STAGE-3",
               "awslogs-region": "us-east-2",
               "awslogs-stream-prefix": "ecs"
           }
       },
       "portMappings": [],
       "command": [],
       "cpu": 0,
       "environment": [],
       "mountPoints": [],
       "user": "0",
       "volumesFrom": []
   }
   ],
   "cpu": "1024",
   "executionRoleArn": "arn:aws:iam::852551629426:role/relayer-ecsTaskExecutionRole",
   "family": "relayer-container-STAGE",
   "memory": "2048",
   "networkMode": "awsvpc",
   "runtimePlatform": {
        "operatingSystemFamily": "LINUX"
    },
    "volumes": [
        {
            "name": "efs",
            "efsVolumeConfiguration": {
                "fileSystemId": "fs-000ab26f0217a06e2",
                "transitEncryption": "ENABLED"
            }
        }
    ],
   "requiresCompatibilities": [ 
       "FARGATE" 
    ]
 }
 